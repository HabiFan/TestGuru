 <%= render 'shared/errors', resource: @badge %>
 <%= form_with model: [:admin, @badge], local: true do |f| %>
   <p>
     <%= f.label :name %>
     <%= f.text_field :name, id: :badge_name %>
   </p>
   <p>
     <%= f.label :image %>
     <%= f.text_field :image, id: :badge_image %>
   </p>
   <p>
     <%= f.label :rule_id %>
     <%= f.select :rule_id, BadgeRule.pluck(:name, :id), {}, id: :badge_rule_id %>
   </p>
   <%= f.submit %>
 <% end %>

 <%= link_to t('back'), admin_badges_path %> 