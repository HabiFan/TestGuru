<h1><%= t('.all_tests') %></h1>

<p>
  <%= link_to t('.new_test'), new_admin_test_path, class: 'btn btn-primary' %>
</p>

<table class="table table-bordered mt-2">
  <tr>
    <th class ="sort-by-title pointer">
      <%= t('.test') %>
      <%= octicon 'arrow-up', class: 'text-succes hide' %>
      <%= octicon 'arrow-down', class: 'text-succes hide' %>
    </th>
    <th><%= t('.level') %></th>
    <th><%= t('.count_questions') %></th>
    <th colspan="4"><%= t('.actions') %></th>
  </tr>

  <%= render @tests %>
</table>